<%@page import="cn.iscas.nfsplatform.dao.entity.Tool"%>
<%@page import="java.util.List"%>
<%@ page language="java" contentType="text/html; charset=utf-8"
	pageEncoding="utf-8"%>
<%
	String path = request.getContextPath();
	String basePath = request.getScheme() + "://"
			+ request.getServerName() + ":" + request.getServerPort()
			+ path + "/";
	int userid = (Integer)request.getAttribute("userid");
%>
<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
<title>用户工具列表选择</title>
<script type="text/javascript"
	src="script/jsPlumb/jquery-1.9.0.js"></script>
<script type="text/javascript"
	src="script/jsPlumb/jquery-ui-1.9.2-min.js"></script>
<script type="text/javascript" src="<%=basePath%>script/usertools.js"></script>
</head>
<body>

	<input style="display: none" value="<%=basePath%>" id="basePath" />
	<input style="display: none" value="<%=userid%>" id="userId" />	

	<%
		boolean choosedtoolsornot = Boolean.valueOf((String)request.getAttribute("choosetoolsornot"));
		String username = (String)request.getAttribute("username");
		if(choosedtoolsornot == true){
	%>
		 <input type="button" value="进入工作流定制界面" onclick="getToOrderFlow()" /><br/>
		 <input type="button" value="查看工具列表"  onclick="showToolsList()" /><br/>
		 <input type="button" value="查看用户信息列表" onclick="showUsersList()" /><br/>
		 <table border="1">
		 <%
		 	List<Tool> choosedtools = (List<Tool>)request.getAttribute("choosedtools");
		 	for(Tool t : choosedtools){
		 %>
		 	 <tr>
		 	 	<td style="display: none; " class="userchoosedtools"><%=t.getId() %></td>
		 		<td><%=t.getToolname() %></td>
		 		<td><a href="<%=t.getTooladdress() %>"><%=t.getTooladdress() %></a></td>
		 		<td><%=t.getDescription() %></td>		
		 	 </tr>
		 <% 			
		 	}
		 %>
		 </table>
	<%
		}else{
	%>
		 您尚未选择工具，请进去工具列表，选择自己的工具。<br/>
		 <input type="button" value="查看工具列表"  onclick="showToolsList()" /><br/>
	<%
		}
	%>
	
	<br/><br/>

	<div id="toolslist"></div>
	
	<br/><br/>
	<div id="userslist"></div>
	
</body>
</html>
